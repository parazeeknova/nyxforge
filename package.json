{
  "name": "nyxforge",
  "version": "0.0.17",
  "bin": {
    "nyxforge": "dist/index.js"
  },
  "files": [
    "dist/index.js",
    "README.md"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parazeeknova/nyxforge.git"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "dep:check": "pnpm dlx sherif@latest",
    "dep:fix": "pnpm dlx sherif@latest --fix",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/ui",
    "migrate": "cd packages/database && npx prisma format && npx prisma generate && npx prisma db push",
    "clean": "git clean -xdf node_modules"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "^1.9.4",
    "@forge/configs": "workspace:*",
    "@turbo/gen": "^2.4.4",
    "@types/node": "22.10.7",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "ultracite": "4.1.17"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "commander": "^13.1.0",
    "require-in-the-middle": "^7.5.2"
  },
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@prisma/client",
      "@prisma/engines",
      "@sentry/cli",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
